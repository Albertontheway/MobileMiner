<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DataActivity" >

        <Button
            android:id="@+id/expireButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/exportButton"
            android:layout_alignBottom="@+id/exportButton"
            android:layout_toRightOf="@+id/exportButton"
            android:onClick="expireData"
            android:text="Expire Data" />

        <Button
            android:id="@+id/exportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView1"
            android:layout_marginTop="59dp"
            android:onClick="exportData"
            android:text="Export Data" />

        <TextView
            android:id="@+id/dataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/expireButton"
            android:layout_alignLeft="@+id/exportButton"
            android:layout_marginBottom="14dp"
            android:text="Database Size:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        
        <Button
            android:id="@+id/myLocationsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/exportButton"
            android:layout_alignRight="@+id/expireButton"
            android:layout_below="@+id/expireButton"
            android:layout_marginTop="24dp"
            android:onClick="myLocations"
            android:text="My Cell Locations" />

        <ListView
            android:id="@+id/usedApps"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:layout_alignLeft="@+id/myLocationsButton"
            android:layout_below="@+id/myLocationsButton"
            android:layout_marginTop="43dp" >

        </ListView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="My top apps:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
		
</RelativeLayout>
