<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

        <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startMining"
            android:text="Start Mining" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stopMining"
            android:text="Stop Mining" />

    </LinearLayout>

	<TextView
	    android:id="@+id/socketLegend"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/linearLayout1"
	    android:layout_below="@+id/linearLayout1"
	    android:text="Network Sockets:"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<ExpandableListView
	    android:id="@+id/socketView"
	    android:layout_width="fill_parent"
	    android:layout_height="150dip"
	    android:layout_alignLeft="@+id/socketLegend"
	    android:layout_below="@+id/socketLegend" >
	</ExpandableListView>

	<TextView
	    android:id="@+id/networkName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="18dp"
	    android:layout_toRightOf="@+id/linearLayout1"
	    android:text="Network: None"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/cellLocation"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/socketLegend"
	    android:layout_alignLeft="@+id/networkName"
	    android:text="Cell ID: None"
	    android:textAppearance="?android:attr/textAppearanceSmall" />
            
</RelativeLayout>
