<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.kcl.odo.mobileminer"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.ac.kcl.odo.mobileminer.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="uk.ac.kcl.odo.mobileminer.socketupdate" />
                <category android:name="uk.ac.kcl.odo.mobileminer.cellupdate" />
                <category android:name="uk.ac.kcl.odo.mobileminer.networkupdate" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="uk.ac.kcl.odo.mobileminer.activities.DataActivity"
            android:label="MyData" >
        </activity>

        <service android:name="uk.ac.kcl.odo.mobileminer.miner.MinerService" />
        <service
            android:name="uk.ac.kcl.odo.mobileminer.miner.NotificationService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilityservice" />

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>

        <activity
            android:name="uk.ac.kcl.odo.mobileminer.activities.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        
        <provider
            android:name=".data.MinerDataProvider"
            android:authorities="uk.ac.kcl.odo.mobileminer"
            android:exported="false" />
        
        
    </application>

</manifest>
